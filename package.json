{
  "name": "remote-testing-cloud",
  "version": "1.0.0",
  "description": "Remote Testing Desktop Application",
  "main": "electron/main.js",
  "author": "Jitu Kumar",
  "license": "ISC",

  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },

  "build": {
    "appId": "com.jitu.remotetestingcloud",
    "productName": "Remote Testing Cloud",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  },

  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  }
}
